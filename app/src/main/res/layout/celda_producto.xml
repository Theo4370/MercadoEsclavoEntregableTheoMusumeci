<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:background="#F6F2F2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/celdaArticuloImageViewFoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/me1"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">


            <TextView
                android:id="@+id/celdaArticuloTextViewArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Articulo"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#4837AA"
                    android:textSize="22dp"/>


                <TextView
                    android:id="@+id/celdaArticuloTextViewPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="#4837AA"
                    android:textSize="25dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/celdaArticuloTextViewUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:textSize="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>